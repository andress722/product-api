<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adicionar Produto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Adicionar Novo Produto</h1>
    <form action="/create" method="POST" enctype="multipart/form-data" id="productForm" class="card p-4 shadow">
      <!-- Campos Básicos -->
      <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Digite o nome do produto" required>
      </div>
      <div class="mb-3">
        <label for="brand" class="form-label">Marca</label>
        <input type="text" name="brand" id="brand" class="form-control" placeholder="Digite a marca" required>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Categoria</label>
        <div class="input-group">
          <select id="category" name="category" class="form-select" required>
            <option value="" disabled selected>Selecione uma categoria</option>
            <% categories.forEach(category => { %>
              <option value="<%= category.name %>"><%= category.name %></option>
            <% }) %>
          </select>
          <button type="button" class="btn btn-outline-secondary" id="addCategoryButton">Nova Categoria</button>
        </div>
        <div id="newCategoryDiv" class="mt-2" style="display: none;">
          <input type="text" id="newCategoryInput" class="form-control" placeholder="Digite o nome da nova categoria">
          <button type="button" class="btn btn-success mt-2" id="saveCategoryButton">Salvar Categoria</button>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Descrição</label>
        <textarea name="description" id="description" class="form-control" placeholder="Descreva o produto" rows="3" required></textarea>
      </div>

      <!-- Tamanhos -->
      <div id="sizesSection">
        <h4>Tamanhos</h4>
        <div class="form-check form-check-inline">
          <input class="form-check-input size-checkbox" type="checkbox" id="sizeGG" value="GG">
          <label class="form-check-label" for="sizeGG">GG</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input size-checkbox" type="checkbox" id="sizeG" value="G">
          <label class="form-check-label" for="sizeG">G</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input size-checkbox" type="checkbox" id="sizeM" value="M">
          <label class="form-check-label" for="sizeM">M</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input size-checkbox" type="checkbox" id="sizeP" value="P">
          <label class="form-check-label" for="sizeP">P</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input size-checkbox" type="checkbox" id="sizePP" value="PP">
          <label class="form-check-label" for="sizePP">PP</label>
        </div>
      </div>

      <!-- Variantes de Tamanho -->
      <div id="variantsSection" class="mt-4"></div>

      <!-- Botões -->
      <div class="text-end mt-4">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
      </div>
    </form>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const sizeCheckboxes = document.querySelectorAll(".size-checkbox");
      const variantsSection = document.getElementById("variantsSection");

      sizeCheckboxes.forEach(checkbox => {
        checkbox.addEventListener("change", () => {
          const size = checkbox.value;

          if (checkbox.checked) {
            const sizeDiv = document.createElement("div");
            sizeDiv.className = "size-group";
            sizeDiv.id = `size-${size}`;
            sizeDiv.innerHTML = `
              <h5 class="mt-3">${size}</h5>
              <div class="form-check form-check-inline">
                ${["Azul", "Preto", "Branco", "Amarelo", "Verde", "Vermelho"].map(color => `
                  <div class="form-check form-check-inline">
                    <input class="form-check-input color-checkbox" type="checkbox" id="color-${size}-${color}" value="${color}" data-size="${size}">
                    <label class="form-check-label" for="color-${size}-${color}">${color}</label>
                  </div>
                `).join("")}
              </div>
              <div id="details-${size}" class="row mt-3"></div>
            `;
            variantsSection.appendChild(sizeDiv);

            const colorCheckboxes = sizeDiv.querySelectorAll(".color-checkbox");
            colorCheckboxes.forEach(colorCheckbox => {
              colorCheckbox.addEventListener("change", () => {
                const color = colorCheckbox.value;
                const size = colorCheckbox.dataset.size;

                if (colorCheckbox.checked) {
                  const colorDiv = document.createElement("div");
                  colorDiv.className = "col-md-6";
                  colorDiv.id = `details-${size}-${color}`;
                  colorDiv.innerHTML = `
                    <div class="card p-3">
                      <h6>${color}</h6>
                      <input type="hidden" name="sizes[${size}][variants][${color}][color]" value="${color}">
                      <div class="mb-2">
                        <label class="form-label">Preço</label>
                        <input type="number" step="0.01" name="sizes[${size}][variants][${color}][price]" class="form-control" required>
                      </div>
                      <div class="mb-2">
                        <label class="form-label">Quantidade</label>
                        <input type="number" name="sizes[${size}][variants][${color}][quantity]" class="form-control" required>
                      </div>
                      <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input on-sale-checkbox" id="onSale-${size}-${color}" name="sizes[${size}][variants][${color}][onSale]" value="true">
                        <label class="form-check-label" for="onSale-${size}-${color}">Está em promoção?</label>
                      </div>
                      <div class="mb-2">
                        <label class="form-label">Desconto (%)</label>
                        <input type="number" name="sizes[${size}][variants][${color}][discount]" id="discount-${size}-${color}" class="form-control discount-field" disabled>
                      </div>
                      <div class="mb-2">
                        <label class="form-label">Imagem</label>
                        <input type="file" name="sizes[${size}][variants][${color}][image]" class="form-control">
                      </div>
                    </div>
                  `;
                  document.getElementById(`details-${size}`).appendChild(colorDiv);

                  const onSaleCheckbox = colorDiv.querySelector(".on-sale-checkbox");
                  const discountField = colorDiv.querySelector(".discount-field");
                  onSaleCheckbox.addEventListener("change", () => {
                    discountField.disabled = !onSaleCheckbox.checked;
                  });
                } else {
                  const colorDiv = document.getElementById(`details-${size}-${color}`);
                  if (colorDiv) colorDiv.remove();
                }
              });
            });
          } else {
            const sizeDiv = document.getElementById(`size-${size}`);
            if (sizeDiv) sizeDiv.remove();
          }
        });
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
